{
	$schema: 'https://docs.renovatebot.com/renovate-schema.json',
	extends: [
		'config:best-practices',
	],
	enabledManagers: [
		'dockerfile',
	],
	pinDigests: true,
	dockerfile: {
		managerFilePatterns: [
			'/(^|/)Dockerfile$/',
			'/Dockerfiles/.*\\.Dockerfile$/',
		],
	},
	packageRules: [
		{
			matchManagers: [
				'dockerfile',
			],
			matchFileNames: [
				'Dockerfiles/**',
			],
			addLabels: [
				'renovate',
				'dependencies',
				'docker',
			],
			separateMajorMinor: true,
			separateMinorPatch: true,
		},
	],
}
